@model nstest.web.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "nsTest";
}

    <div class="container">
        <div class="row">
            <div class="col-sm-8">
                <div class="card">
                    <div class="card-header">

                    </div>
                    <div class="card-body align-content-center">
                        <div>
                            <img src="@Model.img" alt="@Model.title" style="height: 100%; width: 100%;">
                        </div>
                        <div>
                            <span> Title: @Model.title</span>
                        </div>                        
                    </div>
                    <div class="card-footer"></div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="card">
                    <div class="card-header">

                    </div>
                    <div class="card-body">

                    </div>
                    <div class="card-footer"></div>
                </div>
            </div>
        </div>
        <div class="row"> 
            <div style="padding-left: 20px; padding-top: 10px;">
                <a asp-controller="Comic"
                   asp-action="Index"
                   asp-route-id="@Model.PreviousComicId"
                   title="@Model.title">Previous</a>
            </div>
        </div>
    </div>

