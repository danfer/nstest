@model nstest.web.ViewModels.ComicViewModel
@{
    ViewData["Title"] = "nsTest";
}

<div class="container">
    <div class="row">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header">

                </div>
                <div class="card-body align-content-center">
                    <div>
                        <img src="@Model.img" alt="@Model.title" style="height: 100%; width: 100%;">
                    </div>
                    <div>
                        <span> Title: @Model.title</span>
                    </div>
                </div>
                <div class="card-footer"></div>
            </div>
        </div>     
    </div>
    <div class="row col-xs-12" style="display: flex;">
        <div class="col-xs-2" style="display: inline-block;">
            @if (!@Model.IsTheFirstOne)
            {
                <a asp-controller="Comic"
                   asp-action="Index"
                   asp-route-id="@Model.PreviousComicId"
                   title="@Model.title"
                   style="padding-top:10px;padding-left:15px;">Previous</a>
            }
        </div>
        <div class="col-xs-6" style="display: inline-block;width: 50%;"></div>
        <div class="col-xs-2" style="display: inline-block;justify-content:end;">
            <a asp-controller="Comic"
               asp-action="Index"
               asp-route-id="@Model.NextComicId"
               asp-title="@Model.title"
               style="padding-top: 10px;">Next</a>
        </div>
    </div>
</div>